@page
@model BestBrightness.Pages.Member.ChangeMemberStatusModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member Status</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css">

    <style>
        .scrollable-table {
            max-height: 250px; /* Adjust the height as needed */
            overflow-y: auto;
        }

        .fixed-card {
            margin-bottom: 20px; /* Add some space between cards */
        }

        body {
            overflow: hidden; /* Prevent the page itself from scrolling */
        }

        .table-custom {
            font-size: 0.85rem; /* Decrease font size */
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <!-- Members List Card -->
        <div class="card bg-light fixed-card">
            <div class="card-header">
                Members List
            </div>
            <div class="card-body">
                <div class="scrollable-table">
                    <table class="table table-striped table-bordered table-hover table-sm table-custom">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Username</th>
                                <th>Gender</th>
                                <th>Date of Birth</th>
                                <th>Contact Number</th>
                                <th>Address</th>
                                <th>Joining Date</th>
                                <th>Status</th>
                                <th>Age Group</th>
                                <th>Branch</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in Model.GetAllMembers)
                            {
                                <tr>
                                    <td>@member.FirstName</td>
                                    <td>@member.LastName</td>
                                    <td>@member.Username</td>
                                    <td>@member.Gender</td>
                                    <td>@member.DateOfBirth.ToString("yyyy-MM-dd")</td>
                                    <td>@member.ContactNumber</td>
                                    <td>@member.Address</td>
                                    <td>@member.JoiningDate.ToString("yyyy-MM-dd")</td>
                                    <td>@member.StatusName</td>
                                    <td>@member.AgeGroupName</td>
                                    <td>@member.BranchName</td>
                                    <td>
                                        <a href="@Url.Page("/Member/EditMember", new { id = member.MemberID })" class="btn btn-sm btn-warning"> <i class="bi bi-pencil-square"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Awaiting List Card -->
        <div class="card bg-light fixed-card">
            <div class="card-header">
                Awaiting List
            </div>
            <div class="card-body">
                <div class="scrollable-table">
                    <table class="table table-striped table-bordered table-hover table-sm table-custom">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Username</th>
                                <th>Gender</th>
                                <th>Contact Number</th>
                                <th>Current Status</th>
                                <th>Awaiting Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var awaitingModel in Model.GetAwaitingList)
                            {
                                <tr>
                                    <td>@awaitingModel.FirstName</td>
                                    <td>@awaitingModel.LastName</td>
                                    <td>@awaitingModel.Username</td>
                                    <td>@awaitingModel.Gender</td>
                                    <td>@awaitingModel.ContactNumber</td>
                                    <td>@awaitingModel.StatusName</td>
                                    <td>
                                        @awaitingModel.AwaitStatus
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
