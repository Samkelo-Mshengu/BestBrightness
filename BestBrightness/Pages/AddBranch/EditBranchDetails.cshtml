@page
@model BestBrightness.Pages.AddBranch.EditBranchDetailsModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Branch Information</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9aU8f5qZlHfEauXhQrpf8rW+UZu0ekR1VQ/wl5jmzN9AzYZg6Me0/v5z4yBpXy" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMzUjigT7v5vW8Z7T9iyqyJwFfmF6LFN59ZaBQ" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1 class="mt-5 mb-4">Branches</h1>
        <div class="row">
            @foreach(var branch in Model.Branch)
            {
            <form method="post">
                <div class="mb-3">
                    <label for="BranchName" class="form-label">Branch Name</label>
                        <input type="text" asp-for="@Model.EditedBranch.BranchName" class="form-control" id="BranchName" name="BranchName" value="@branch.BranchName" required>
                </div>
                <div class="mb-3">
                    <label for="BranchLocation" class="form-label">Branch Location</label>
                        <input type="text" asp-for="@Model.EditedBranch.BranchLocation" class="form-control" id="BranchLocation" name="BranchLocation" value="@branch.BranchLocation" required>
                </div>
                    <div class="mb-3">
                        <label for="CountyName" class="form-label">County Name</label>
                        <input type="text" asp-for="@Model.EditedBranch.CountyName" class="form-control" id="CountyName" name="CountyName" value="@branch.CountyName" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="ProvinceName" class="form-label">Province Name</label>
                        <input type="text" asp-for="@Model.EditedBranch.ProvinceName" class="form-control" id="ProvinceName" name="ProvinceName" value="@branch.ProvinceName" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="City" class="form-label">City</label>
                        <input type="text" asp-for="@Model.EditedBranch.City" class="form-control" id="City" name="City" value="@branch.City" readonly>
                    </div>

                
                <button type="submit" class="btn btn-primary">Save changes</button>
            </form>
            }
        </<div>
    </div>
</body>
</html>

